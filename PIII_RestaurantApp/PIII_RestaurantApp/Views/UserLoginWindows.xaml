<Window x:Class="PIII_RestaurantApp.Views.UserLoginWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIII_RestaurantApp.Views"
        mc:Ignorable="d"
        Background="wheat"
        Title="UserLoginWindows" Height="600" Width="450">
    <Grid Margin="20">
        <!-- Define rows and columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Logo or Title -->
        <TextBlock Grid.Row="0" Text="Login" FontSize="40" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,20" />

        <!-- Username Input -->
        <Border Grid.Row="1" 
        Background="White" 
        BorderBrush="#DDDDDD" 
        BorderThickness="1" 
        CornerRadius="25"
        Margin="0,0,0,20" 
        Width="300">
            <Grid>
                <TextBox x:Name="txtUsername"
                 Padding="15"
                 FontSize="18"
                 BorderThickness="0"
                 Background="Transparent"/>
                <TextBlock IsHitTestVisible="False"
                  Text="Enter your name"
                  VerticalAlignment="Center"
                  Margin="20,0,0,0"
                  Foreground="Gray">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=txtUsername}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>
        <!-- Password Input -->
        <Border Grid.Row="2" 
               Background="White" 
               BorderBrush="#DDDDDD" 
               BorderThickness="1" 
               CornerRadius="25"
               Margin="0,0,0,20"
               Width="300">                
            <Grid>
                <TextBox x:Name="txtPassword"
                        Padding="15"
                        FontSize="18"
                        BorderThickness="0"
                        Background="Transparent"/>
                <TextBlock IsHitTestVisible="False"
                          Text="Enter your password"
                          VerticalAlignment="Center"
                          Margin="20,0,0,0"
                          Foreground="Gray">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=txtPassword}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>
        <!--Buttons -->
        <Grid Grid.Row="3" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" 
                    Margin="55,0,0,0">
                <Button x:Name="Login"
                      Content="Contiune" 
                      Height="40"
                      Background="#FF4500"
                      Foreground="White"
                      FontSize="15"
                      FontWeight="Bold"
                      BorderThickness="0"
                      Click="BtnUserLogin_Clicked" />
            </Border>
            <Border Grid.Column="2"
                    Margin="0,0,55,0">
                <Button x:Name="Cancel"
                     Content="Cancel" 
                     Height="40"
                     Background="gray"
                     Foreground="White"
                     FontSize="15"
                     FontWeight="Bold"
                     BorderThickness="0"
                     Click="BtnUserCancel_Clicked" />
            </Border>
        </Grid>     
    </Grid>
</Window>
